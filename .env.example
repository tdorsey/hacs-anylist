# Environment variables for HACS AnyList
# Copy this file to .env and fill in your actual values
# Related to TypeScript conversion issue: #1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=hacs-anylist:*

# Application server settings
APP_PORT=3000
APP_HOST=0.0.0.0

# Security settings
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# HOME ASSISTANT INTEGRATION SETTINGS  
# =============================================================================
# Home Assistant server connection
HASS_SERVER_HOST=127.0.0.1
HASS_SERVER_PORT=8123
HASS_TOKEN=your-home-assistant-long-lived-access-token

# Home Assistant configuration path (for file access)
HOME_ASSISTANT_CONFIG_PATH=./config

# =============================================================================
# ANYLIST INTEGRATION SETTINGS
# =============================================================================
# AnyList server address (if using external server)
ANYLIST_SERVER_ADDR=http://127.0.0.1:1234

# Default list name for operations
ANYLIST_DEFAULT_LIST=Shopping

# AnyList credentials (if needed)
ANYLIST_EMAIL=your-anylist-email@example.com
ANYLIST_PASSWORD=your-anylist-password

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hacs_anylist
POSTGRES_USER=hacs_user
POSTGRES_PASSWORD=secure-postgres-password

# Database connection string (alternative to individual settings)
DATABASE_URL=postgresql://hacs_user:secure-postgres-password@postgres:5432/hacs_anylist

# =============================================================================
# REDIS SETTINGS
# =============================================================================
# Redis configuration for caching and sessions
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure-redis-password
REDIS_DB=0

# Redis connection string (alternative to individual settings)
REDIS_URL=redis://:secure-redis-password@redis:6379/0

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log output format (json, text)
LOG_FORMAT=json

# Log file path (optional, logs to stdout if not set)
LOG_FILE=./logs/app.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Number of cluster workers (0 = auto-detect CPU cores)
CLUSTER_WORKERS=0

# Cache TTL in seconds
CACHE_TTL=3600

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origin (set to false to disable CORS, or specify allowed origins)
CORS_ORIGIN=false

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Helmet security headers
HELMET_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# File watching for hot reload (development only)
CHOKIDAR_USEPOLLING=true

# Development server settings
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=3000

# Source maps in development
GENERATE_SOURCEMAP=true