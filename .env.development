# Development environment overrides
# This file contains development-specific environment variable overrides
# Related to TypeScript conversion issue: #1

# Development mode
NODE_ENV=development
DEBUG=hacs-anylist:*,express:*

# Development server settings
APP_PORT=3000
APP_HOST=0.0.0.0

# Enable hot reload
CHOKIDAR_USEPOLLING=true
GENERATE_SOURCEMAP=true

# Relaxed security for development
CORS_ORIGIN=true
RATE_LIMIT_ENABLED=false
HELMET_ENABLED=false

# Development logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Development database settings (use weaker passwords)
POSTGRES_PASSWORD=devpassword
REDIS_PASSWORD=devpassword

# Development cache settings
CACHE_TTL=60

# Development request timeout (shorter for faster feedback)
REQUEST_TIMEOUT=10000

# Development paths
HOME_ASSISTANT_CONFIG_PATH=./config
LOG_FILE=./logs/dev.log