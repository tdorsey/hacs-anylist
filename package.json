{
  "name": "@tdorsey/hacs-anylist",
  "version": "1.5.9",
  "description": "TypeScript library for AnyList integration with Home Assistant",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "build:esm": "tsc --project tsconfig.esm.json && npm run postbuild:esm",
    "build:cjs": "tsc --project tsconfig.build.json",
    "postbuild:esm": "node -e \"const fs=require('fs');const path=require('path');const dir='./dist-esm';if(fs.existsSync(dir)){fs.readdirSync(dir).forEach(f=>{if(f.endsWith('.js')){const old=path.join(dir,f);const newName=path.join('./dist',f.replace('.js','.mjs'));fs.renameSync(old,newName);}});fs.rmSync(dir,{recursive:true});}\"",
    "clean": "rimraf dist dist-esm",
    "dev": "tsc --project tsconfig.build.json --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "anylist",
    "home-assistant",
    "hacs",
    "smart-home",
    "todo",
    "shopping-list",
    "typescript"
  ],
  "author": "Kevin Liu <kevdliu@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tdorsey/hacs-anylist.git"
  },
  "bugs": {
    "url": "https://github.com/tdorsey/hacs-anylist/issues"
  },
  "homepage": "https://github.com/tdorsey/hacs-anylist#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "axios": "^1.6.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}