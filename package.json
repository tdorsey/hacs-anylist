{
  "name": "hacs-anylist",
  "version": "2.0.0",
  "description": "Home Assistant Custom Component for Anylist integration - TypeScript version",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc -w",
    "build:prod": "tsc --project tsconfig.prod.json",
    "dev": "concurrently \"npm run build:watch\" \"npm run dev:serve\"",
    "dev:serve": "nodemon --delay 1000ms dist/index.js",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 'src/**/*.json' 'src/**/*.yaml' dist/",
    "docker:build": "docker build -t hacs-anylist .",
    "docker:build:dev": "docker build --target development -t hacs-anylist:dev .",
    "docker:build:prod": "docker build --target production -t hacs-anylist:prod .",
    "docker:dev": "docker-compose --profile development up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml --profile production up",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "keywords": [
    "home-assistant",
    "anylist",
    "typescript",
    "hacs",
    "integration",
    "todo",
    "shopping-list"
  ],
  "author": "HACS Anylist Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tdorsey/hacs-anylist.git"
  },
  "bugs": {
    "url": "https://github.com/tdorsey/hacs-anylist/issues"
  },
  "homepage": "https://github.com/tdorsey/hacs-anylist#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}